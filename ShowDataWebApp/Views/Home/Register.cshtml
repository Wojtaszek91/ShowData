@model ShowDataWebApp.Models.User 
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<div class="jumbotron">
    <form method="post">
        <fieldset>
            @if (TempData["nameError"] == null)
            {
                <div class="form-group">
                    <label class="col-form-label" asp-for="Username">Username</label>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
                </div>
            }
            else
            {
                <div class="alert alert-dismissible alert-danger">
                    <label class="col-form-label" asp-for="Username">Username</label>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
                </div>

                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Oops...</strong> <a href="#" class="alert-link">@TempData["nameError"]</a>
                </div>
            }
            @if (TempData["passError"] == null)
            {
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" asp-required placeholder="Password" />
                </div>
            }
            else
            {
                <div class="alert alert-dismissible alert-danger">
                    <label class="form-control-label" asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <div class="invalid-feedback">Fill the password input first !</div>
                </div>

                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Oops...</strong> <a href="#" class="alert-link">@TempData["passError"]</a>
                </div>
            }

        </fieldset>
        <button type="submit" class="btn btn-dark" value="Submit">Login !</button>
    </form>
</div>

